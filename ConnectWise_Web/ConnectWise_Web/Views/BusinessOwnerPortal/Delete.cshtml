@model ConnectWise_Web.Models.Webinar

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #222; /* Dark gray background color */
            colour:white;
        }

        h1 {
            color: mediumpurple; /* Medium purple color for h1 heading */
            text-align: center;
        }

         h3, h4 {
            color: #3CBCBC; /* Teal color for headings */
            text-align: center;
        }

        hr {
            border-top: 2px solid #3CBCBC;
            margin-top: 20px;
            margin-bottom: 20px;
        }

        .row {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .col-sm-2, .col-sm-10 {
            padding: 10px;
        }

        .btn-danger {
            background-color: #FF4136; /* Red button color */
            border: none;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

            .btn-danger:hover {
                background-color: #FF5A4D; /* Darker red on hover */
            }

        .back-link {
            text-align: center;
            margin-top: 20px;
        }

            .back-link a {
                color: #3CBCBC;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Webinar</h4>
            <hr />
            <dl class="row" style="color: white;">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.WebinarID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WebinarID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateAndTime)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateAndTime)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Location)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Location)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SpeakerName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SpeakerName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SpeakerBio)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SpeakerBio)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Webinars">Back to List</a>
            </form>
        </div>
    </div>
</body>
</html>